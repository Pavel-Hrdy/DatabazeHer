@model DataHer.Model.GameCategory
@{


    ViewBag.Title = "CreateCategories";
}

<h2>Nový žánr</h2>

@Html.ValidationSummary()

@using (Html.BeginForm("Add", "Category", FormMethod.Post, new { @class = "form-group", enctype = "multipart/form-data" }))
{

    <div class="form-group row">
        <div class="col-sm-12">
            <label>Název Žánru</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <label>Stručný popis žánru</label>
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Description)
        </div>
    </div>



    <button type="submit" class="btn btn-primary">Vytvořit žánr</button>

}