@model DataHer.Model.Game
@{
    ViewBag.Title = "Edit";
}

<h2>@Model.Name  - Editace</h2>

@Html.ValidationSummary()

@using (Html.BeginForm("Update", "Games", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.ImageName)


    <div class="form-group">
        <div class="col-sm-12">
            <label>Název hry</label>

            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-12">
            <label>Vývojář</label>

            @Html.TextBoxFor(x => x.Developer, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Developer)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-12">
            <label>Popis Developera</label>
            @Html.TextAreaFor(x => x.DescriptionDeveloper, new { @class = "form-control formatedtext" })
        </div>
    </div>

    <div class="form-group">
          <div class="col-sm-12">
            <label>Rok vydání</label>

            @Html.TextBoxFor(x => x.PublishedYear, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.PublishedYear)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-12">
            <label>Popis</label>
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control formatedtext" })

        </div>
    </div>

     <div class="form-group">
        <div class="col-sm-12">
            <label>URL videa</label>
            @Html.TextBoxFor(x => x.Video, new { @class = "form-control" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-12">
            <label>Kategorie</label>

            @Html.DropDownList("categoryId", new SelectList(ViewBag.Categories, "Id", "Name", Model.Category.Id), new { @class = "form-control" })

        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-12">
            <label>Obrázek</label>

            <input type="file" name="picture" />
            @if (!string.IsNullOrEmpty(Model.ImageName))
            {
                <img src="@Url.Content("~/uploads/game" + Model.ImageName)" />
            }

        </div>
    </div>

      <div class="col-sm-12">
    <button type="submit" class="btn btn-primary">Upravit hru</button>
       </div>

}


<script src="//tinymce.cachefly.net/4.1/tinymce.min.js"></script>
<script>tinymce.init({ selector: '.formatedtext' });</script>

